<%-include('../../partials/auth/head.ejs')%>
<body>
   <section id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 form-container">
                <h2 class="text-center">Login Here</h2>
                <p><%=message%></p>
                <form action="" method="post">
                    <label for="">Username</label>
                    <input type="email" name="username" id="" class="form-control">
                    <label for="">Password</label>
                    <input type="password" name="password" id="" class="form-control">
                    <button type="submit" class="form-control btn btn-primary mt-2">Login</button>
                </form>
               <p class="forgot-pass"><a href="/auth/forgotemailpassword">Forgotten password?</a></p> 
               <hr>
               <a href="/auth/createAccount"><button class="btn btn-success create-button">Create Account</button></a>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
   </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous">
    </script>
</body>
</html>